// Que: Read temperature fahrenheit to Celsius and Celsius to fahrenheit 
#include<iostream>
using namespace std;
int main(){
    float F, C;
    // fahrenheit to Celsius
    cout<<"ENTER THE TEMPERATURE IN FAHRENHEIT : ";
    //FORMULA TO CALCULATE THE FAHREBHEIT TO CELSIUS C=5.0/9.0*(F-32);
    cin>>F;
    C=5.0/9.0*(F-32);
    cout<<"\nTHE GIVEN TEMPERATURE IN FAHRENHEIT IS ("<<F<<") AND THE TEMPERATURE WILL BE IN CELSIUS IS: "<<C;
    // Celsius to fahrenheit 
    cout<<"\nENTER THE TEMPERATURE IN CELSIUS: ";
    cin>>C;
    F=((9.0/5.0)*C)+32;
        cout<<"\nTHE GIVEN TEMPERATURE IN CELSIUS IS ("<<C<<") AND THE TEMPERATURE WILL BE IN FAHRENHEIT IS: "<<F;
    return 0;
    
}
